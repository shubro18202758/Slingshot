{
    "manifest_version": 3,
    "name": "Nexus Event Listener",
    "version": "1.0",
    "description": "Captures event links from messaging platforms and sends them to Nexus OS.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://web.whatsapp.com/*",
        "*://web.telegram.org/*",
        "http://localhost/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://web.whatsapp.com/*",
                "*://web.telegram.org/*"
            ],
            "js": [
                "observer.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}